@model ResultOfferDto

<div class="modal fade" id="DetailOffer-@Model.OfferID" aria-labelledby="DetailOfferLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="DetailOfferLabel">Özel Talep/ Açıklama</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <dl class="row">
                    <dt class="col-sm-3">
                        <label> Özel Talep/ Açıklama</label>
                    </dt>
                    <dd class="col-sm-9">
                        @Html.DisplayFor(model => model.Descriptions)
                    </dd>
                   
                </dl>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Çıkış</button>
            </div>

        </div>
    </div>
</div>
