@model AddOfferDto
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Teklif Paneli</h6>
            <h1 class="mb-5">İhtiyacınız için <span class="text-primary text-uppercase">şimdi teklif alın</span></h1>
        </div>
        <div class="row g-5">
            <div class="col-lg-6">
                <div class="row g-3">
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.1s" src="~/hotel-html-template/img/about-8.jpg" style="margin-top: 25%;">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-75 wow zoomIn" data-wow-delay="0.3s" src="~/hotel-html-template/img/about-9.jpg">
                    </div>
                    <div class="col-6 text-end">
                        <img class="img-fluid rounded w-50 wow zoomIn" data-wow-delay="0.5s" src="~/hotel-html-template/img/about-5.jpg">
                    </div>
                    <div class="col-6 text-start">
                        <img class="img-fluid rounded w-100 wow zoomIn" data-wow-delay="0.7s" src="~/hotel-html-template/img/about-6.jpg">
                    </div>
                </div>
            </div>
            <div class="col-lg-6">
                <div class="wow fadeInUp" data-wow-delay="0.2s">
                    <form method="post" asp-action="AddOfferRequest" asp-controller="Offer">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="BuildingName" placeholder="Bina Adı">
                                    <label for="name">Bina Adı</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="ContactName" placeholder="Adınız Soyadınız">
                                    <label for="name">Adınız Soyadınız</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="email" class="form-control" asp-for="Mail" placeholder="Mail Adresiniz">
                                    <label for="email">Mail</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="PhoneNumber" placeholder="Telefon Numaranız">
                                    <label for="email">Telefon Numarası</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <div class="form-floating">
                                        @Html.DropDownListFor(x => x.ElectronicSystemType, (List<SelectListItem>)ViewBag.v, new { @class = "form-select" })
                                        <label for="subject">Servis Tipi giriniz</label>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" id="select1" asp-for="ElevatorType">
                                        <option value="Bina Servis Asansörü">Bina Servis Asansörü</option>
                                        <option value="Bina Yük Asansörü">Bina Yük Asansörü</option>
                                        <option value="Engelli Asansörü">Engelli Asansörü</option>
                                        <option value="Hidrolik Servis Asansörü">Hidrolik Servis Asansörü</option>
                                    </select>
                                    <label for="select1">Asansör Tipi</label>
                                </div>
                            </div>


                            <div class="col-md-6">
                                <div class="form-floating">
                                    <select class="form-select" id="select3" asp-for="DoorType">
                                        <option value="Otomatik">Otomatik</option>
                                        <option value="Çarpma Kapı">Çarpma Kapı</option>
                                    </select>
                                    <label for="select3">Kapı Tipi</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="NumberOfFloor" placeholder="Kat Sayısı">
                                    <label for="email">Kat Sayısı</label>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="Adress1" placeholder="Adres">
                                    <label for="email">Adres</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-floating">
                                    <input type="text" class="form-control" asp-for="Adress2" placeholder="İlçe">
                                    <label for="email">İlçe</label>
                                </div>
                            </div>

                            <div class="col-12">
                                <div class="form-floating">
                                    <textarea class="form-control" placeholder="Özel İstekler" asp-for="Descriptions" id="message" style="height: 100px"></textarea>
                                    <label for="message">Özel İstekler</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <button class="btn btn-primary w-100 py-3" type="submit">Teklif Talebini İlet</button>
                            </div>

                        </div>

</form>
                </div>
            </div>
        </div>
    </div>
</div>